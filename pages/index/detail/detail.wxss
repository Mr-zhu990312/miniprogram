view{
    margin: 0;
    padding: 0;
}

.box{
    margin-bottom: 100rpx;
}

.header{
    display: flex;
    background-color: #82C6C7;
    justify-content: center;
    align-items: center;
    padding: 5%;
    position: relative;
}

.logo {
    flex: 0 0 108rpx;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-style: oblique;
    font-weight: 700;
}

.logo image {
    width:110rpx;
    height: 110rpx;
    border-radius: 50%;
    border: 2px solid #fff;
}

.content{
    flex: 0 0 1;
    margin-left: 5%;
}

.title{
    display: block;
    width: 100%;
    line-height: 40rpx;
    font-weight: 700;
}

.name{
    display: inline-block;
    font-size: 1.2rem;
}

.order{
    display: inline-block;
    font-size: .8rem;
    margin-left: 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.status{
    display: block;
    font-size: .9rem;
    line-height: 40rpx;
    font-weight: 700;
}

.detail-box{
    width: 100%;
}

.detail-item{
    border-left: 2rpx solid #82C6C7;
    margin-left: 100rpx;
    position: relative;
}

.active{
    color: #82C6C7;
}

.icon image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: absolute;
    top: 40rpx;
    left: -40rpx;
    box-shadow:0 2px 4px 0 rgba(239,98,98,.12), 0 0 6px 0 rgba(0,0,0,.04);
}

.right{
    display: block;
    padding-left: 40px;
}

.time{
    font-size: .9rem;
    height: 40rpx;
    line-height: 40rpx;
    padding-top: 60rpx;
}

.info{
    font-size: .7rem;
    width: 90%;
    padding: 10rpx 0 20rpx 0;
    border-bottom: 1px solid #E9E9E9;
    line-height: 40rpx;
}